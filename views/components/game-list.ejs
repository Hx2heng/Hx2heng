<% games.map(function(game){%>

    <a href="/game?id=<%- game._id %>" class="article animated slideInUp game-only-list article-game">

        <div class="article-meta">
            <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>
            <time class="article-date"> <%= game.createDate %> <%= game.createTime %></time>

        </div>

        <div class="article-inner">

            <div class="article-header">
                <div class="article-header-bg" style="background-image:url(<%= game.bgImg %>)">
                </div>
                <div class="article-header-content">
                    <h1>
                        <p class="article-title">
                            <%- game.title %>
                        </p>
                    </h1>
                    <p class="article-info">
                        <%- game.author %>
                    </p>
                </div>

            </div>
        </div>
    </a>



    <%});%>