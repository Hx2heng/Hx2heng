<article class="article article-type-post animated slideInDown">

    <div class="article-inner" name="#<%- data._id %>">
        <header class="article-header">
            <div class="article-header-content ">
                <h1>
                    <% if(isConcrete){%>
                        <p class="article-title ">
                            <%- data.title %>
                        </p>
                        <%}else{%>
                            <a class="article-title " href="/article?id=<%- data._id %>">
                                <%- data.title %>
                            </a>
                            <%}%>
                </h1>
                <p class="article-tags">
                    <span class="article-info article-author"><%- data.author %> | </span>
                    <% for(var i=0;i<data.tags.length;i++){ %>
                        <label data-type="<%=data.tags[i]%>"><%=data.tags[i]%></label>

                        <% }%>
                            <% if(!isConcrete){%>
                                <a href="javascript:" class="content-scrollUp"><span class="glyphicon glyphicon-triangle-top" aria-hidden="true"></span> 收起</a>
                                <%}%>

                </p>
            </div>
            <div class="article-meta">
                <span class="glyphicon glyphicon-calendar" aria-hidden="true"></span>

                <time class="article-date"> <%= data.createDate %> <%= data.createTime %></time>
            </div>
        </header>
        <div class="article-entry">
            <div class="markdown-body">
                <%- data.content %>
            </div>
        </div>
        <div class="article-info article-info-index">
            <div class="socialShare"></div>
        </div>
    </div>
</article>
<!--PC和WAP自适应版-->
<% if(isConcrete){%>
    <iframe id="cy-frame" name="cyFrame" width="100%" scrolling="no" frameborder="0" src="/comment?sid=<%- data._id %>" style="background-color:white;margin-top:-10px; padding: 0 30px;border-top:1px dashed #e5e5e5"></iframe>
    <%}%>
        <div class="clearfix"></div>